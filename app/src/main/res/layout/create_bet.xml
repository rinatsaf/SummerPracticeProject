<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/input_title" android:hint="Название ставки" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/input_amount" android:hint="Сумма" android:inputType="numberDecimal" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/input_odds" android:hint="Коэффициент" android:inputType="numberDecimal" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/input_description" android:hint="Описание" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/button_save_bet" android:text="Создать ставку" android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>