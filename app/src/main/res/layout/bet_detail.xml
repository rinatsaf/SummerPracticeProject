<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/text_title" android:textStyle="bold" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_amount" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_odds" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_description" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>